<script>

$(document).ready(function() {
	$("#logoutBtn").click(function() {
		$.ajax({
		    url: "/logout",
		    method: "POST"
		}).success(function() {
			window.location.href = "/";
		});
	});

	$('.top-navbar li').click(function() {
		$('.top-navbar li.active').removeClass("active");
		$(this).addClass('active');
	});
});


</script>